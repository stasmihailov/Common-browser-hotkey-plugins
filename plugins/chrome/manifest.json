{
  "name": "Common Hotkeys",
  "version": "1.0",
  "description": "Provides hotkeys for common Google Chrome actions",
  "permissions": ["commands", "tabs"],
  "commands": {
    "open-blank-page": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Opens an about:blank tab"
    },
    "open-extensions-page": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Opens a chrome://extensions tab"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2
}
